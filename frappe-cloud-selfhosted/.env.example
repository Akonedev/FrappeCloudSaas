# ============================================
# Frappe Cloud Self-Hosted - Environment Config
# ============================================

# ===================
# DOMAIN CONFIGURATION
# ===================
DOMAIN=localhost
ACME_EMAIL=admin@localhost

# Pour production, utiliser :
# DOMAIN=moncloud.com
# ACME_EMAIL=admin@moncloud.com

# ===================
# DATABASE
# ===================
MARIADB_ROOT_PASSWORD=changeme_secure_password_32chars
MARIADB_HOST=mariadb
MARIADB_PORT=3306

# ===================
# REDIS
# ===================
REDIS_CACHE_HOST=redis-cache
REDIS_QUEUE_HOST=redis-queue
REDIS_PORT=6379

# ===================
# FRAPPE/PRESS
# ===================
FRAPPE_SITE_NAME=cloud.localhost
ADMIN_PASSWORD=admin
ENCRYPTION_KEY=changeme_encryption_key_32chars_

# ===================
# AGENT
# ===================
AGENT_PASSWORD=changeme_agent_password
AGENT_PORT=25052

# ===================
# MINIO (S3 Storage)
# ===================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme_minio_password
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET_BACKUPS=backups
MINIO_BUCKET_PRIVATE=private
MINIO_BUCKET_PUBLIC=public

# ===================
# LAGO BILLING
# ===================
LAGO_API_URL=http://lago-api:3000
LAGO_FRONT_URL=http://billing.localhost
LAGO_API_KEY=changeme_lago_api_key

# ===================
# KEYCLOAK SSO
# ===================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_keycloak_password
KEYCLOAK_URL=http://keycloak:8080

# ===================
# POSTAL (Email)
# ===================
POSTAL_SMTP_HOST=postal
POSTAL_SMTP_PORT=25
POSTAL_API_KEY=changeme_postal_api_key

# ===================
# TRAEFIK
# ===================
TRAEFIK_DASHBOARD_USER=admin
# Générer avec: htpasswd -nb admin password
TRAEFIK_DASHBOARD_PASSWORD=$apr1$xyz...

# ===================
# PORTS (Development)
# ===================
# Utiliser des ports > 30000 pour éviter les conflits
HTTP_PORT=30080
HTTPS_PORT=30443
MINIO_CONSOLE_PORT=30001
TRAEFIK_DASHBOARD_PORT=30008
