# CoreDNS Configuration for local development
# Resolves *.localhost to 127.0.0.1

.:53 {
    # Log queries
    log
    
    # Enable errors
    errors
    
    # Local domain resolution
    template IN A localhost {
        answer "{{ .Name }} 60 IN A 127.0.0.1"
        fallthrough
    }
    
    template IN AAAA localhost {
        answer "{{ .Name }} 60 IN AAAA ::1"
        fallthrough
    }
    
    # Forward everything else to system DNS
    forward . /etc/resolv.conf
    
    # Cache responses
    cache 30
}
